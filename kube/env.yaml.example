apiVersion: v1
kind: ConfigMap
metadata:
  name: research-ai-env
data:
  VITE_API_URL: "http://localhost:8080/researchai-api"
  VITE_BASE: "/researchai/"
  CORS_ORIGINS: "http://localhost:8080,http://localhost:5173"
  VD_SURF_USER: "your_username"
  VD_SURF_PASS: "your_password"

  # Service URLs (change for multi-server)
  BACKEND_URL: "http://127.0.0.1:8000"
  AI_SERVICE_URL: "http://127.0.0.1:8090"
  NEO4J_BOLT_URL: "bolt://127.0.0.1:7687"
  NEO4J_HTTP_URL: "http://127.0.0.1:7474"
  NEO4J_USER: "neo4j"
  NEO4J_PASS: "your_neo4j_password"

  # Per-server auth (this server issues its own JWTs)
  SERVER_AUTH_USER: "server-local"
  SERVER_AUTH_PASS: "your-server-password"
  JWT_SECRET: "generate-a-random-secret-here"

  # Frontend credentials (must match SERVER_AUTH_USER/PASS when on same server)
  VITE_AUTH_USER: "server-local"
  VITE_AUTH_PASS: "your-server-password"

  # Remote servers (uncomment for multi-server deployments)
  # REMOTE_AI_URL: "https://ai-server.example.com"
  # REMOTE_AI_USER: "server-ai"
  # REMOTE_AI_PASS: "ai-servers-password"
  # REMOTE_NEO4J_URL: "https://neo4j-server.example.com"
  # REMOTE_NEO4J_USER: "server-neo4j"
  # REMOTE_NEO4J_PASS: "neo4j-servers-password"
